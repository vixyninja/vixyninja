{
  // Workbench
  "workbench.startupEditor": "none",
  "workbench.editor.labelFormat": "default",
  "workbench.list.smoothScrolling": false,
  "workbench.editor.wrapTabs": true,
  "workbench.editor.tabSizing": "fixed",
  "workbench.editor.defaultBinaryEditor": "default",
  "workbench.productIconTheme": "material-product-icons",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Default Dark+",
  "workbench.tree.stickyScrollMaxItemCount": 4,
  "workbench.tree.indent": 4,

  // Window
  "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}${separator}",
  "window.commandCenter": true,
  "window.titleSeparator": " ðŸŽ¯ ",
  "window.zoomLevel": 0.5,

  // Editor
  "editor.formatOnPaste": true,
  "editor.detectIndentation": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "editor.renderControlCharacters": false,
  "editor.renderLineHighlight": "gutter",
  "editor.rulers": [120],
  "editor.formatOnSave": true,
  "editor.minimap.enabled": true,
  "editor.hover.enabled": true,
  "editor.fontSize": 11.5,
  "editor.lineHeight": 12.5,
  "editor.letterSpacing": 0,
  "editor.snippetSuggestions": "bottom",
  "editor.suggest.showClasses": true,
  "editor.suggest.showConstructors": true,
  "editor.suggest.showFunctions": true,
  "editor.suggest.showMethods": true,
  "editor.suggest.showProperties": true,
  "editor.suggest.showVariables": true,
  "editor.suggest.showConstants": true,
  "editor.suggest.showEnums": true,
  "editor.suggest.showEnumMembers": true,
  "editor.suggest.showKeywords": true,
  "editor.suggest.snippetsPreventQuickSuggestions": true,
  "editor.suggest.preview": true,
  "editor.suggest.shareSuggestSelections": true,
  "editor.wordBasedSuggestions": "matchingDocuments",
  "editor.suggest.showInterfaces": true,
  "editor.suggest.localityBonus": true,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.mouseWheelScrollSensitivity": 1,
  "editor.smoothScrolling": true,
  "editor.mouseWheelZoom": false,
  "editor.linkedEditing": true,
  "editor.fontFamily": "Monaco, monospace",
  "editor.fontLigatures": "'ss02', 'ss04'",
  "editor.glyphMargin": true,
  "editor.hover.sticky": true,
  "editor.hover.delay": 500,
  "editor.bracketPairColorization.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll": "explicit"
  },
  "editor.suggestSelection": "first",
  "editor.inlineSuggest.enabled": true,
  "editor.codeLensFontFamily": "Monaco",
  "editor.codeLensFontSize": 12,
  "editor.inlayHints.fontSize": 13,
  "editor.guides.bracketPairs": "active",

  // Git
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "always",
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false,
    "Log": false,
    "javascript": true,
    "dart": true
  },
  "github.copilot.editor.enableAutoCompletions": true,
  "chat.editor.fontSize": 12.5,

  // Debug
  "debug.console.wordWrap": true,
  "debug.inlineValues": "on",
  "debug.console.fontFamily": "Monaco",
  "debug.console.fontSize": 12.5,
  "debug.console.lineHeight": 14,

  // Files & Search
  "files.defaultLanguage": "{activeEditorLanguage}",
  "files.exclude": {
    "USE_GITIGNORE": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/coverage": true,
    "**/dist": true,
    "**/build": true,
    "**/.build": true,
    "**/.gh-pages": true
  },

  // Terminal
  "terminal.integrated.copyOnSelection": false,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontFamily": "Monaco",
  "terminal.integrated.fontSize": 12.5,
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.enableFileLinks": "on",

  // JavaScript & TypeScript
  "javascript.preferences.quoteStyle": "single",
  "typescript.preferences.quoteStyle": "single",
  "javascript.validate.enable": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  "[javascript]": {
    "editor.suggestSelection": "recentlyUsed",
    "editor.suggest.showKeywords": false
  },
  "files.associations": {
    "*.html": "html",
    "**/templates/*.html": "django-html",
    "**/templates/*": "django-txt",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements",
    "*.env": "dotenv"
  },

  // PHP
  "[php]": {
    "editor.defaultFormatter": "DEVSENSE.phptools-vscode"
  },
  "php.validate.enable": true,
  "php.inlayHints.parameters.byReference": true,
  "php.inlayHints.parameters.enabled": true,
  "php.inlayHints.parameters.suppressNameMatchingValue": true,
  "php.inlayHints.types.lambdaParameter": true,
  "intelephense.phpdoc.useFullyQualifiedNames": true,
  "php.completion.namingConvention": "snake_case",
  "php.completion.showParameters": true,
  "php.linkedEditing.variables": true,
  "html.format.templating": true,
  "php.suggest.basic": true,
  "emmet.syntaxProfiles": {
    "javascript": "jsx"
  },
  "emmet.includeLanguages": {
    "django-html": "html",
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "emmet.showSuggestionsAsSnippets": true,

  // Dart & Flutter
  "dart.previewFlutterUiGuides": true,
  "dart.previewFlutterUiGuidesCustomTracking": true,
  "dart.lineLength": 120,
  "dart.openDevTools": "flutter",
  "dart.showTodos": true,
  "dart.flutterHotReloadOnSave": "all",
  "dart.enableSnippets": true,
  "dart.hotReloadOnSave": "all",
  "dart.hotReloadProgress": "statusBar",
  "dart.flutterCreateOrganization": "vixyninja",
  "dart.enableSdkFormatter": true,

  // CSpell
  "cSpell.enabled": true,
  "cSpell.language": "en,pt,pt_BR,es,fr,vi",
  "cSpell.enableFiletypes": ["shellscript"],
  "cSpell.userWords": ["bycryptjs", "cloudinary", "metatype", "typeorm"],

  // ============> Extensions <============
  // Material Icon Theme
  "material-icon-theme.folders.color": "#42a5f5",
  "material-icon-theme.activeIconPack": "angular_ngrx",
  "material-icon-theme.files.color": "#42a5f5",
  "material-icon-theme.opacity": 1,
  "material-icon-theme.saturation": 1,
  "material-icon-theme.hidesExplorerArrows": false,

  // Prettier
  "prettier.printWidth": 120,
  "prettier.singleAttributePerLine": true,
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,
  "[handlebars]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },

  // GitLens
  "gitlens.views.branches.files.layout": "list",

  // Red Hat Telemetry
  "redhat.telemetry.enabled": true
}
