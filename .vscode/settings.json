{
  // =========================================
  // WORKBENCH UI
  // =========================================
  "workbench.startupEditor": "none",
  "workbench.editor.labelFormat": "default",
  "workbench.list.smoothScrolling": false,
  "workbench.editor.wrapTabs": true,
  "workbench.editor.tabSizing": "fixed",
  "workbench.editor.defaultBinaryEditor": "default",
  "workbench.colorTheme": "Default Dark Modern",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.productIconTheme": "material-product-icons",
  "workbench.tree.stickyScrollMaxItemCount": 4,
  "workbench.tree.indent": 4,
  "workbench.tree.enableStickyScroll": false,
  "workbench.tree.expandMode": "doubleClick",
  "workbench.tree.renderIndentGuides": "always",
  "workbench.colorCustomizations": {},
  // =========================================
  // WINDOW SETTINGS
  // =========================================
  "window.title": "${dirty}${activeEditorMedium}${separator}${rootName}${separator}",
  "window.titleSeparator": " ðŸŽ¯ ",
  "window.zoomLevel": -0.5,
  // =========================================
  // EDITOR SETTINGS
  // =========================================
  "editor.formatOnPaste": true,
  "editor.detectIndentation": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "editor.renderControlCharacters": false,
  "editor.renderLineHighlight": "gutter",
  "editor.rulers": [
    120
  ],
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.minimap.enabled": true,
  "editor.hover.enabled": true,
  "editor.fontSize": 16,
  "editor.lineHeight": 17.5,
  "editor.letterSpacing": 0,
  "editor.snippetSuggestions": "bottom",
  "editor.suggest.showClasses": true,
  "editor.suggest.showConstructors": true,
  "editor.suggest.showFunctions": true,
  "editor.suggest.showMethods": true,
  "editor.suggest.showProperties": true,
  "editor.suggest.showVariables": true,
  "editor.suggest.showConstants": true,
  "editor.suggest.showEnums": true,
  "editor.suggest.showEnumMembers": true,
  "editor.suggest.showKeywords": true,
  "editor.suggest.snippetsPreventQuickSuggestions": true,
  "editor.suggest.preview": true,
  "editor.suggest.shareSuggestSelections": true,
  "editor.wordBasedSuggestions": "matchingDocuments",
  "editor.suggest.showInterfaces": true,
  "editor.suggest.localityBonus": true,
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.mouseWheelScrollSensitivity": 1,
  "editor.smoothScrolling": true,
  "editor.mouseWheelZoom": false,
  "editor.linkedEditing": true,
  "editor.fontFamily": "Monaco",
  "editor.fontLigatures": "'ss02', 'ss04'",
  "editor.glyphMargin": true,
  "editor.hover.sticky": true,
  "editor.hover.delay": 500,
  "editor.bracketPairColorization.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll": "explicit"
  },
  "editor.formatOnSave": true,
  "editor.suggestSelection": "first",
  "editor.inlineSuggest.enabled": true,
  "editor.codeLensFontFamily": "Monaco",
  "editor.codeLensFontSize": 16,
  "editor.inlayHints.fontSize": 16,
  "editor.guides.bracketPairs": "active",
  "editor.wordWrap": "wordWrapColumn",
  "editor.wordWrapColumn": 100,
  // =========================================
  // GIT AND GITHUB COPILOT SETTINGS
  // =========================================
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "always",
  "github.copilot.enable": {
    "*": true,
    "plaintext": true,
    "markdown": true,
    "scminput": false,
    "Log": false,
    "javascript": true,
    "dart": true,
    "csharp": true,
    "cpp": true
  },
  "git.confirmSync": false,
  "chat.editor.fontSize": 14.5,
  "github.copilot.nextEditSuggestions.enabled": true,
  "git.replaceTagsWhenPull": true,
  // =========================================
  // DEBUGGER SETTINGS
  // =========================================
  "debug.console.wordWrap": true,
  "debug.inlineValues": "on",
  "debug.console.fontFamily": "Monaco",
  "debug.console.fontSize": 16,
  "debug.console.lineHeight": 17.5,
  // =========================================
  // FILES & SEARCH SETTINGS
  // =========================================
  "files.defaultLanguage": "{activeEditorLanguage}",
  "files.exclude": {
    "USE_GITIGNORE": true,
    "**/*.spec.ts": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/coverage": true,
    "**/dist": true,
    "**/build": true,
    "**/.build": true,
    "**/.gh-pages": true
  },
  // =========================================
  // TERMINAL SETTINGS
  // =========================================
  "terminal.integrated.copyOnSelection": false,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.fontFamily": "Monaco",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.enableFileLinks": "on",
  // =========================================
  // GO SETTINGS
  // =========================================
  "go.useLanguageServer": true,
  "go.formatTool": "gofumpt",
  "go.lintTool": "golangci-lint",
  "go.lintFlags": [
    "--fast"
  ],
  "go.testFlags": [
    "-v"
  ],
  "go.toolsManagement.autoUpdate": true,
  "go.buildFlags": [
    "-tags=wireinject"
  ],
  // =========================================
  // JAVASCRIPT / TYPESCRIPT SETTINGS
  // =========================================
  "javascript.preferences.quoteStyle": "single",
  "typescript.preferences.quoteStyle": "single",
  "javascript.validate.enable": false,
  "typescript.validate.enable": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  "[javascript]": {
    "editor.suggestSelection": "recentlyUsed",
    "editor.suggest.showKeywords": false
  },
  "files.associations": {
    "*.html": "html",
    "**/templates/*.html": "django-html",
    "**/templates/*": "django-txt",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements",
    "*.env": "dotenv"
  },
  // =========================================
  // SPELL CHECKER SETTINGS
  // =========================================
  "cSpell.enabled": true,
  "cSpell.language": "en,pt,pt_BR,es,fr,vi",
  "cSpell.enabledFileTypes": {
    "*": true,
    "markdown": true
  },
  "cSpell.userWords": [
    "bycryptjs",
    "cloudinary",
    "metatype",
    "typeorm",
    "vixyninja"
  ],
  // =========================================
  // EXTENSIONS
  // =========================================
  // -------- Material Icon Theme --------
  "material-icon-theme.folders.color": "#42a5f5",
  "material-icon-theme.activeIconPack": "angular_ngrx",
  "material-icon-theme.files.color": "#42a5f5",
  "material-icon-theme.opacity": 1,
  "material-icon-theme.saturation": 1,
  "material-icon-theme.hidesExplorerArrows": false,
  // -------- Prettier --------
  "prettier.printWidth": 120,
  "prettier.singleAttributePerLine": true,
  "prettier.singleQuote": true,
  "prettier.tabWidth": 2,
  // -------- GitLens --------
  "gitlens.views.branches.files.layout": "list",
  "gitlens.gitCommands.skipConfirmations": [
    "fetch:command"
  ],
  "gitlens.views.repositories.showStashes": true,
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1",
  // -------- Red Hat --------
  "redhat.telemetry.enabled": true,
  // -------- Make / Build tools --------
  "makefile.configureOnOpen": false,
  // =========================================
  // FORMATTER PER LANGUAGE
  // =========================================
  "[handlebars]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[properties]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-containers"
  },
  "[ignore]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[go]": {
    "editor.defaultFormatter": "golang.go",
  },
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  "[csharp]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[toml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  // =========================================
  // COMMENTS
  // =========================================
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true
    },
    {
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false
    },
    {
      "tag": "REMARK",
      "color": "#81E1B8",
      "strikethrough": false
    },
    {
      "tag": "DOCS",
      "color": "#C82909",
      "strikethrough": false
    }
  ],
  // =========================================
  // AUTO HEADER
  // =========================================
  "autoHeader": {
    "format": {
      "startWith": "/**",
      "middleWith": "*",
      "endWith": "*/",
      "headerPrefix": "@",
    },
    "header": {
      "Author": "vixyninja",
      "Create Time": {
        "type": "createTime",
        "format": "YYYY-MM-DD HH:mm:ss",
      },
      "Modified time": {
        "type": "modifyTime",
        "format": "YYYY-MM-DD HH:mm:ss"
      },
      "Description": "",
    }
  },
  // =========================================
  // MISC
  // =========================================
}
