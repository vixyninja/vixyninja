{
  // =========================================
  // Formatting
  // =========================================
  "protobuf.formatOnSave": true,
  "protobuf.formatter.enabled": true,
  "protobuf.formatter.alignFields": true,
  "protobuf.formatter.insertEmptyLineBetweenDefinitions": true,
  "protobuf.formatter.maxEmptyLines": 1,
  // =========================================
  // Import & IntelliSense
  // =========================================
  "protobuf.includes": [
    "${workspaceFolder}/proto",
    "${workspaceFolder}/third_party/proto"
  ],
  "protobuf.completion.autoImport": true,
  "protobuf.hover.showDocumentation": true,
  // =========================================
  // Protoc
  // =========================================
  "protobuf.protoc.path": "protoc",
  "protobuf.protoc.options": [
    "--proto_path=${workspaceFolder}/proto",
    "--proto_path=${workspaceFolder}/third_party/proto",
    "--go_out=${workspaceFolder}/gen/go",
    "--go_opt=paths=source_relative",
    "--go-grpc_out=${workspaceFolder}/gen/go",
    "--go-grpc_opt=paths=source_relative"
  ],
  "protobuf.protoc.compileOnSave": false,
  // =========================================
  // Disable Buf / External Linter (DONT USE BUF)
  // =========================================
  "protobuf.externalLinter.enabled": false,
  "protobuf.externalLinter.linter": "none",
  "protobuf.breaking.enabled": false,
  // =========================================
  // Editor polish
  // =========================================
  "[proto]": {
    "editor.defaultFormatter": "DrBlury.protobuf-vsc",
    "editor.formatOnSave": true
  }
}
